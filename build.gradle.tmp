buildscript {
	repositories {
		maven { url 'http://192.168.68.235:8881/archiva/repository/all' }
	}
	dependencies {
		classpath("org.springframework.boot:spring-boot-gradle-plugin:1.3.6.RELEASE")
	}
}

repositories {
	maven { url 'http://192.168.68.235:8881/archiva/repository/all' }
}
ext {
	assertjVersion = '3.4.1'
	jacksonVersion = '2.6.7'
	junitVersion = '4.12'
	log4jVersion = '1.2.17'
	mockitoVersion = '1.10.19'
	slf4jVersion = '1.7.21'
	springVersion = '4.2.7.RELEASE'
	platformBomVersion = '1.0.0.BUILD-SNAPSHOT'
	platformIntegrationVersion = '1.0.0.BUILD-SNAPSHOT'
	
	idPrefix = 'service'
}
configurations.all {
	exclude group: 'org.slf4j', module: 'slf4j-log4j12'
	resolutionStrategy.cacheChangingModulesFor 0, 'seconds'
 	resolutionStrategy.cacheDynamicVersionsFor 0, 'seconds'
}

// Apply the java plugin to add support for Java
apply plugin: 'java'
apply plugin: 'eclipse'
apply plugin: 'idea'

description = 'Platform Model Repository'

dependencies {
	compile ("com.platform.bom:platform-bom-entity:$platformBomVersion") { changing = true }
	compile ("com.platform.integration:platform-integration-neo4j:$platformIntegrationVersion") { changing = true }
   	compile("org.springframework.boot:spring-boot-starter-test")
   	testCompile "org.springframework:spring-test:$springVersion"
   	testCompile "junit:junit:$junitVersion"
}
